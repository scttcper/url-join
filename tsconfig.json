{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "target": "ES2018",
    "module": "CommonJS",
    "strict": true,
    "newLine": "lf",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist"
  }
}
