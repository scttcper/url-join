{
  "name": "@ctrl/url-join",
  "version": "0.0.0-placeholder",
  "description": "Join strings together and normalize the resulting url",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/url-join",
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "keywords": [
    "url-join",
    "url",
    "join",
    "trailing slash",
    "typescript"
  ],
  "scripts": {
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "npm run build",
    "build": "tsc",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:ci": "c8 --reporter=text --reporter=lcov ava"
  },
  "devDependencies": {
    "@ctrl/eslint-config": "2.1.0",
    "@sindresorhus/tsconfig": "2.0.0",
    "@types/node": "16.10.2",
    "ava": "4.0.0-alpha.2",
    "c8": "7.9.0",
    "typescript": "4.4.3"
  },
  "ava": {
    "files": [
      "test/**/*.spec.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "release": {
    "branches": "main"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.16"
  }
}
